@{
    ViewData["Title"] = "Авторизация";
}
@model LoginViewModel
<div class="row mt-6 mb-3">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="container mt-4">
            <form asp-controller="User" asp-action="Login" method="post" enctype="multipart/form-data">
                <div class="card">
                    <div class="card-header">
                        <span>Авторизация</span>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="row  justify-content-center">
                                <label asp-for="Nickname" class="text-secondary">Псевдоним</label>
                            </div>
                            <div class="row  justify-content-center">
                                <input type="text" asp-for="Nickname" class="rounded" style="border: solid 1px #C7D2D9" maxlength="20" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row  justify-content-center">
                                <label asp-for="Password" class="text-secondary">Пароль</label>
                            </div>
                            <div class="row  justify-content-center">
                                <input type="password" asp-for="Password" class="rounded" style="border: solid 1px #C7D2D9" maxlength="20" />
                            </div>
                        </div>
                        <div class="form-group form-check">
                            <div class="row  justify-content-center">
                                <label asp-for="RememberMe" class="justify-content-center">
                                    <input class="form-check-input justify-content-center" type="checkbox"> Запомнить пароль
                                </label>
                            </div>
                        </div>
                        <div class="row  justify-content-center">
                            <div class="validation justify-content-center" asp-validation-summary="ModelOnly"></div>
                        </div>
                        <div class="row  justify-content-center">
                            <button class="btn ml-3 justify-content-cente" style="background-color: #EFEFEF; float: right; border: solid 1px #C7D2D9" width="50%" type="submit">Войти</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>

<div class="row justify-content-center">
    <p class="justify-content-center text-secondary align-content-center mr-3">Нет аккаунта?</p>
    <button class="btn ml-3" style="background-color: #E5E5E5; float: right; border: solid 1px #C7D2D9" width="50%" asp-area="" asp-controller="Register" asp-action="Register">Зарегистрироваться</button>
</div>